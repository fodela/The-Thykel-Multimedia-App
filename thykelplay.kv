
ScreenManager:
    id: screenmanager
    name: 'sm'
    HomeScreen:
        id: home
        name: 'home'
    PictureScreen:
        id: pictures
        name: 'pictures'
    MusicScreen:
        id: music
        name: 'music'
    VideoScreen:
        id: video
        name: 'video'
            
<HomeScreen>:
    FloatLayout: 
        # (252/255, 3/255, 227/255)
        canvas.before:
            Color: 
                rgb: (0, 0, 0)
            Rectangle:
                size: self.size
                pos: self.pos
    


