<VideoScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: 0,0,1
            Rectangle:
                pos: self.pos
                size: self.size
        MDToolbar:
            left_action_items: [['arrow-left',lambda x : app.change_screen('home')]]
            title: 'Playing video'
            md_bg_color: 0,0,0,1
            specific_text_color: app.color_primary
            pos_hint: {'top':1}
            user_font_size: '40sp'

        VideoPlayer:
            pos_hint: {'top':.98}
            size:1,.8
            volume: 1
            source: app.video_name
            state: 'play'
            attr: 'VideoPlayer.allow_fullscreen'
            allow_stretch: True

<MusicScreen>:
    name: 'music'
    FloatLayout:
        canvas:
            Color:
                rgb: 0,0,0
            Rectangle:
                pos: self.pos
                size: self.size