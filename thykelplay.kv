        MDToolbar:
            title: 'Thykel-Play'
            font_size: 40
            pos_hint: {'top':1}
            md_bg_color: 0,0,0,1
            specific_text_color: 252/255, 3/255, 227/255,1
            anchor_title: 'center'
    
        #Buttons
        MDRaisedButton:
            md_bg_color: (252/255, 3/255, 227/255,1)
            text: "Find Media"
            pos_hint: {'top':.4,'center_x':.5 }
            on_release: app.choose_file()

